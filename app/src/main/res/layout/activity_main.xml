<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ali.firstapplication.MainActivity"
    android:background="#213502">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="هندونه"
            android:id="@+id/textView"
            android:gravity="center"
            android:textSize="46dp"
            android:textStyle="bold"
            android:textColor="#dcd964"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".2"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:layout_weight=".1"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:width="0dp"
                    android:visibility="invisible"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ادامه"
                    android:id="@+id/btn_continue_game"
                    android:layout_marginBottom="40dp"
                    android:layout_weight=".8"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#fff"
                    android:background="#7ea00e"
                    android:minWidth="100dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button12"
                    android:layout_weight=".1"
                    android:width="0dp"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_weight=".1"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:width="0dp"
                    android:visibility="invisible"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="شروع"
                    android:id="@+id/btn_start"
                    android:layout_marginBottom="40dp"
                    android:layout_weight=".8"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#fff"
                    android:background="#7ea00e"
                    android:minWidth="100dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:layout_weight=".1"
                    android:width="0dp"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    android:layout_weight=".1"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:width="0dp"
                    android:visibility="invisible"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="دریافت سکه"
                    android:id="@+id/btn_get_coin"
                    android:layout_marginBottom="40dp"
                    android:layout_weight=".8"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#fff"
                    android:background="#7ea00e"
                    android:minWidth="100dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:layout_weight=".1"
                    android:width="0dp"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button9"
                    android:layout_weight=".1"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:width="0dp"
                    android:visibility="invisible"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تنظیمات"
                    android:id="@+id/btn_setting"
                    android:layout_marginBottom="40dp"
                    android:layout_weight=".8"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#fff"
                    android:background="#7ea00e"
                    android:minWidth="100dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button11"
                    android:layout_weight=".1"
                    android:width="0dp"
                    android:background="#00000000"
                    android:layout_marginBottom="40dp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="طراحی توسط علی امینی"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textSize="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

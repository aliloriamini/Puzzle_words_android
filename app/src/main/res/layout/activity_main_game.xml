                    android:layout_weight="1"
                    android:tag="گ"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/LetterButton"
                    android:text="ظ"
                    android:id="@+id/txt_25"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="ظ"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="ط"
                    android:id="@+id/txt_26"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="ط"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="ز"
                    android:id="@+id/txt_27"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="ز"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="ر"
                    android:id="@+id/txt_28"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="ر"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="ذ"
                    android:id="@+id/txt_29"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="ذ"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="ژ"
                    android:id="@+id/txt_33"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="ژ"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/LetterButton"
                    android:text="د"
                    android:id="@+id/txt_30"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="د"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="و"
                    android:id="@+id/txt_31"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="و"/>

                <TextView
                    style="@style/LetterButton"
                    android:text="آ"
                    android:id="@+id/txt_32"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:tag="آ"/>

                <TextView
                    style="@style/LetterButton"
                    android:id="@+id/textView47"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <TextView
                    style="@style/LetterButton"
                    android:id="@+id/textView48"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <TextView
                    style="@style/LetterButton"
                    android:id="@+id/textView49"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
